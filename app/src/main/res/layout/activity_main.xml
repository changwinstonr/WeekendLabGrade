<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="winston.excercise_weekendgrade.MainActivity">

    <TextView        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <EditText        android:id="@+id/editGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:textColorLink="#FF0000"
        android:layout_marginTop="34dp"
        android:layout_alignStart="@+id/btnGrade"
        android:layout_alignEnd="@+id/btnGrade"
        android:gravity="center_horizontal"/>

    <Button        android:id="@+id/btnGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
    <!-- android:onClick="displayGrade" -->

    <Button         android:id="@+id/btnPassFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass/Fail"
        android:layout_below="@+id/btnGrade"
        android:layout_alignStart="@+id/btnGrade"
        android:layout_alignEnd="@+id/btnGrade"
        android:gravity="center_horizontal"/>
    <!-- android:onClick="displayPassFail" -->

    <Button        android:id="@+id/btn5Times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Times"
        android:layout_below="@+id/btnPassFail"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/btnGrade"
        android:layout_alignEnd="@+id/btnGrade"
        android:gravity="center_horizontal"/>
    <!-- android:onClick="display5Times" -->


</RelativeLayout>
